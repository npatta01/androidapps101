<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/person2_name"
            android:id="@+id/person2TextView"
            android:textStyle="bold"  android:layout_centerHorizontal="true"
            android:textSize="35sp"
            android:layout_margin="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person2ImageView"
            android:src="@drawable/david_anderson"
            android:contentDescription="@string/person2_contentDescription"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:layout_below="@+id/person2TextView"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"/>



    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:id="@+id/personBioView"
            android:layout_alignParentRight="true"

            android:layout_margin="8dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/person2TextView"
            android:layout_toRightOf="@+id/person2ImageView">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person1_bio"
                android:id="@+id/person1BioTextView"

                android:textSize="22sp"
                android:textStyle="italic"
                />
    </ScrollView>




</RelativeLayout>